[Unit]
Description=Ironic Agent
After=network-online.target
Wants=network-online.target

[Service]
TimeoutStartSec=0
ExecStartPre=/bin/podman pull %REGISTRY%/ironic-agent %PODMAN_FLAGS%
ExecStart=/bin/podman run --privileged --network host --mount type=bind,src=/etc/ironic-python-agent.conf,dst=/etc/ironic-python-agent/ignition.conf --mount type=bind,src=/dev,dst=/dev --mount type=bind,src=/sys,dst=/sys --mount type=bind,src=/,dst=/mnt/coreos --mount type=bind,src=/run/dbus/system_bus_socket,dst=/run/dbus/system_bus_socket --name ironic-agent ironic-agent

[Install]
WantedBy=multi-user.target
